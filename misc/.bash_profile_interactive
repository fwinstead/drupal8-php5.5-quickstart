
# Prompt
if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    PS1='\[\033[01;43m\]\h\[\033[00m\] \[\033[01;31m\]\u\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='\u@\h:\w\$ '
fi

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${SSH_CLIENT/ */} \h \u \w\a\]$PS1"
    ;;
*)
    ;;
esac

# if connecting via SSH set DISPLAY
if test -n "${SSH_CLIENT}"
then
	export DISPLAY="${SSH_CLIENT/ */}:0.0"
fi


PHP="${OPENSHIFT_HOMEDIR}app-root/runtime/bin/php"

alias .b=". ${OPENSHIFT_HOMEDIR}app-root/data/.bash_profile_interactive"	# reload to get color prompt
alias c="clear"
alias drush="${PHP} drush.phar"

